<h1>User info</h1>
<%= form_with model: @user, local: true do |f| %>
    <label for="inputname">Name</label><br>
        <%= f.text_field :name, autofocus: true, id:"inputname"%><br><br>
    <label for="inputImage">ProfileImage</label><br>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %><br><br>
    <label for="inputintroduction">introduction</label><br>
        <%= f.text_area :introduction, autofocus: true, id:"inputintroduction" %><br>
    <%= f.submit "Update user"%>
<% end %>
