<h1>User info</h1>
<div class="profile-container">
  <h4 class="profile-name">name <%= @user.name %></h4>
  <%= image_tag('') %>
</div>

<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>
  
<% end %>

<h1>Books</h1>
<table>
    <thread>
        <tr>
            <th>Title</th>
            <th>Opinipn</th>
        </tr>
    </thread>
    <tbody>
        <% @books.each do |book| %>
            <tr>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title%>
              <% end %>
            </td>
                <td><%= book.body %></td>
            </tr>
        <% end %>
        </tbody>
    </table>        
    <%= paginate @books %>