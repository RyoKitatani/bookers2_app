<h1>Books</h1>
<table>
    <tbody>
            <tr>
                <td><%= @book.title%></td>
                <td><%= @book.body %></td>
                <td><%= link_to "Edit" %></td>
                <td>
                  <% if @book.user == current_user %>
                   <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %>
                  <% end %>
                </td>
            </tr>
    </tbody>
</table>
