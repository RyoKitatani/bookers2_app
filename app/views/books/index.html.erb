<%= render 'books/list', book: @book, user: @user %>
<div class="col-md-8 offset-md-1">
<h2>Books</h2>
<table class="table table-hover table-inverse">
    <thread>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Opinipn</th>
            <th colspan="3"></th>
        </tr>
    </thread>
    <tbody>
        <% @books.each do |book| %>
         <tr>
            <td>
                <%= link_to user_path(book.user) do %>
                <%= attachment_image_tag book.user, :profile_image, size: '40x40', fallback: "no_image.jpg"%>
                <% end %>
            </td>
            <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
            </td>
            <td><%= book.body %></td>
            <td>
            <% if book.favorited_by?(current_user) %>
              <%= link_to book_favorites_path(id: book, book_id: book.id), method: :delete do %>
               ❤ <%= book.favorites.count %>
              <% end %>
            <% else %>
              <%= link_to book_favorites_path(id: book, book_id: book.id), method: :post do %>
               ♡ <%= book.favorites.count %>
              <% end %>
            <% end %>
            </td>
            <td>
              <%= link_to "コメント数: #{book.book_comments.count}", book_path(book.id) %>
            </td>
          </tr>
        <% end %>
        </tbody>
    </table>
</div>
</div>
</div>
